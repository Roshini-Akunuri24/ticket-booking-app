  </nav>
</div>

<h1>Theatres</h1>
  <table class="table"> 
    <thead>
      <tr>
        <th>Name</th> 
        <th> Actions </th>
      </tr>
    </thead>
    <tbody> 
    <% @theatres.each do |theatre|%>
        <tr>
          <td><%= theatre.name %></td>
          <td style="display:flex; flex-direction:row;">
            <%= link_to "Show", theatre, class: "btn btn-success" %>
            <%= link_to "Edit", theatre, class: "btn btn-primary" %>
            <%= button_to "Destroy", @theatre, method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% if current_admin.role == 'admin' || current_admin.role == 'super_user' %>
  <%= link_to "Add theatre", new_theatre_path, class: "btn btn-dark" %> 
<% end %>
