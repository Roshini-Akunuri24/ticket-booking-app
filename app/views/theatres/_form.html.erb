<div class = "text-center">
  <%= form_with(model: theatre) do |form| %>
    <% if theatre.errors.any? %>
      <div style="color: red">
        <h3><%= pluralize(theatre.errors.count, "error") %> :</h3>

        <ul>
          <% theatre.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class = "row py-5">
      <div class = "col-lg-4 mx-auto">
        <div class="field">
          <%= form.label :name, style: "display: block" %>
          <%= form.text_field :name, class: "form-control py-2" %>
        </div>

        <br>

        <div class="actions">
          <%= form.submit "Submit", class: "btn btn-dark" %>
        </div>
      </div>
    </div>
  <% end %>
</div>