<div class = "text-center">
  <%= form_with(model: admin_user) do |form| %>
    <% if admin_user.errors.any? %>
      <div style="color: red">
        <h3><%= pluralize(admin_user.errors.count, "error") %>:</h3>
        <ul>
          <% admin_user.errors.each do |error| %>
             <%= error.full_message %> <br>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <br>

    <div>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <br>

    <div>
      <%= form.label :password %>
      <%= form.text_field :password %>
    </div>

     <br>
     
    <div>
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
