<div class = "text-center">
  <%= form_with(model: movie_ticket) do |form| %>
    <% if movie_ticket.errors.any? %>
      <div style="color: red">
        <h3><%= pluralize(movie_ticket.errors.count, "error") %> :</h3>

        <ul>
          <% movie_ticket.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class = "row py-5">
      <div class = "col-lg-4 mx-auto">
        <div>
          <%= form.label :movie_name, style: "display: block"  %>
          <%= form.text_field :movie_name, class: "form-control py-2"  %>
        </div>


        <div>
          <%= form.label :Date %>
          <%= form.date_field :date, class: "form-control py-2"  %>
        </div>
<br>
        <div>
          <%= form.label :Show %>
          <%= form.select :show_id, options_for_select(Show.all.map { |sho| [sho.time, sho.id] }) %>
        </div>
<br>
        <div>
          <%= form.label :Location %>
          <%= form.select :location_id, options_for_select(Location.all.map { |loc| [loc.name, loc.id] })%>
        </div>
      <br>
        <div>
          <%= form.label :Theatre %>
          <%= form.select "theatre_id", options_for_select(Theatre.all.map { |theat| [theat.name, theat.id] }) %>
        </div>
<br>
        <div>
          <%= form.label :image %>
          <%= form.file_field :image, class: "form-control py-2" %>
        </div>

        <br>
        
        <div>
          <%= form.submit "Submit", class: "btn btn-dark"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
