<div class = "text-center">
  <%= form_with(model: movie_ticket) do |form| %>
    <% if movie_ticket.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(movie_ticket.errors.count, "error") %> prohibited this movie_ticket from being saved:</h2>

        <ul>
          <% movie_ticket.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :movie_name, style: "display: block" %>
      <%= form.text_field :movie_name %>
    </div>


    <div>
      <%= form.label :Date, style: "display: block" %>
      <%= form.date_field :date %>
    </div>

    <div>
      <%= form.label :Show, style: "display: block" %>
      <%= form.select :show_id, options_for_select(Show.all.map { |sho| [sho.time, sho.id] }) %>
    </div>

    <div>
    <%= form.label :Location, style: "display: block" %>
    <%= form.select :location_id, options_for_select(Location.all.map { |loc| [loc.name, loc.id] }) %>
  </div>

    <div>
      <%= form.label :Theatre, style: "display: block" %>
      <%= form.select "theatre_id", options_for_select(Theatre.all.map { |theat| [theat.name, theat.id] }) %>
    </div>

    <div>
      <%= form.label :image,style: "display: block" %>
      <%= form.file_field :image %>
    </div>

    <br>
    
    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>
